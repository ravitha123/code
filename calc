package com.beta.learning.repo;


import java.util.Scanner;

public class MyCalc {

	public static void main(String[] args) {
	 
	 
	 MyCalc o1 = new MyCalc();
	 Scanner s = new Scanner(System.in);
	 
	 int a;
	 int b;
	 String c;
	
	 int d = 0;
	 
	 System.out.println("enter new number for a");
	 a = s.nextInt();
	 
	 System.out.println("enter new number for b");
     b = s.nextInt(); 
     
     System.out.println("Choose operation (Add, Sub, Mul or Div)");
	 c = s.next();
     
	 
     if (c.equals("add"))
     {
     d = o1.add(a, b);
		System.out.println("The sum is : " +d);	
     }
     else if (c.equals("sub"))
     {
 
	 d = o1.sub(a, b);
		System.out.println("The diff is : " +d);	
     }
     
     else if (c.equals("mul"))
     {
	 d = o1.mul(a, b);
		System.out.println("The multiplied value is : " +d);
     }
     else
     {
	 d = o1.div(a, b);
		System.out.println("The div result is : " +d);	
     }
		
	}
	

	public int add (int a, int b)
	{
		int d = a + b;
		return d;
	}
	
	public int sub (int a, int b)
	{
		int d = a - b;
		return d;
	}
	
	public int mul (int a, int b)
	{
		int d = a * b;
		return d;
	}
	
	public int div (int a, int b)
	{
		int d = a / b;
		return d;
	}
}

